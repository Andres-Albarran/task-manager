<div class="col-md-7 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h1>Nueva tarea</h1>
    </div>
    <div class="card-body mt-4">
      <form action="/tareas/crear" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <h3>Imagen</h3>
          <input type="file" name="image" class="form-control" />
        </div>
        <div class="form-group mt-4">
          <h3>Titulo</h3>
          <input type="text" name="title" class="form-control" placeholder="Titulo" autofocus />
        </div>
        <div class="form-group mt-4">
          <h3>Description</h3>
          <textarea name="description" class="form-control" placeholder="Description"></textarea>
        </div>

        <body>
          <h3>Usuarios a cargo de la tarea</h3>
          <div class="btn-group flex-grow" data-bs-toggle="buttons">
            <input type="text" name="usuariosACargo" value="">
          </div>
          <h3>Fecha en la que comenz√≥ la tarea.</h3>
          <input type="date" name="assignDate" value="2022-04-22">
          <h3>Fecha limite para la entrega</h3>
          <input type="date" name="deadline" value="2022-04-22">
          <div class="form-group mt-3">
            <button class="btn btn-primary btn-block" type="submit">
              Guardar
            </button>
          </div>
      </form>
    </div>
  </div>
</div>
